<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment"
    android:columnCount="2"
    android:rowCount="5"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:useDefaultMargins="true"
    android:padding="30dp">

        <!-- Nombre -->
        <TextView
            android:text="Nombre:"
            android:layout_columnSpan="1"
            android:layout_width="80dp"
            android:layout_row="0"
            android:layout_column="0"/>

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="190dp"
        android:layout_row="0"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:hint="Edita tu nombre" />

        <!-- Correo -->
        <TextView
            android:text="@string/correo"
            android:layout_columnSpan="1"
            android:layout_width="80dp"
            android:layout_row="1"
            android:layout_height="50dp"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/editTextCorreo"
            android:hint="Edita tu correo"
            android:layout_columnSpan="1"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"/>

        <!-- Contrase単a -->
        <TextView
            android:text="Contrase単a:"
            android:layout_columnSpan="1"
            android:layout_width="80dp"
            android:layout_row="2"
            android:layout_height="50dp"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/editTextContrase単a"
            android:hint="Edita tu contrase単a"
            android:layout_columnSpan="1"
            android:layout_width="190dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_height="50dp"
            android:inputType="textPassword"/>

        <!-- Botones -->
    <Button
        android:id="@+id/btnGuardarCambios"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:height="60dp"
        android:text="Guardar Cambios" />

    <Button
        android:id="@+id/btnEliminarPerfil"
        android:layout_width="120dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:height="60dp"
        android:width="70dp"
        android:text="Eliminar Perfil" />

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Esto son los favoritos"
        android:textAlignment="center"
        android:textSize="20sp" />

</GridLayout>